{
    "sea_level": 63,
    "disable_mob_generation": false,
    "ore_veins_enabled": false,
    "aquifers_enabled": false,
    "legacy_random_source": false,
    "default_block": {
        "Name": "minecraft:stone"
    },
    "default_fluid": {
        "Name": "minecraft:water"
    },
    "spawn_target": [],
    "noise": {
        "height": 640,
        "min_y": -64,
        "max_y": 512,
        "size_horizontal": 4,
        "size_vertical": 1
    },
    "noise_router": {
        "barrier": 0,
        "fluid_level_floodedness": 0,
        "fluid_level_spread": 0,
        "lava": 0,
        "vein_toggle": 0,
        "vein_ridged": 0,
        "vein_gap": 0,
        "temperature": 0,
        "vegetation": 0,
        "continents": "jy_overworld:global_continentalness_2d",
        "erosion": 0,
        "depth": 0,
        "ridges": 0,
        "initial_density_without_jaggedness": 0,
        "final_density": {
            
            "type": "add",
            "argument1": { // add flat elevation variations, further scaled by continentalness
                "type": "mul",
                "argument1": { // mul the absolute value of global cont...
                    "type": "abs",
                    "argument": {
                        "type": "quarter_negative", 
                        // "argument1": 0.2,
                        "argument": "jy_overworld:global_continentalness_2d"
                    }
                }, 
                "argument2": { // ...with the hill function
                    "type": "noise",
                    "noise": "jy_overworld:global_hill_elevation_fluct",
                    "xz_scale": 0.46,
                    "y_scale": 0.1
                }
            },
            "argument2": { //clamping global base continent (land-sea) noise to -14~136
                "type": "add",
                    "argument1": {
                        "type": "y_clamped_gradient",
                        "from_y": -14,
                        "to_y": 136,
                        "from_value": 1,
                        "to_value": -1
                        // "type": "constant",
                        // "argument": 0
                    },
                    "argument2": { // main continental noise, flipped for proportional alignment (unconfirmed) with the continentalness value plot
                        "type": "mul",
                        "argument1": -1,
                        "argument2": "jy_overworld:global_continentalness"
                        // weird scaled sampler river trenches, biased with continentalness
                    }
            }
        }
    },
    "surface_rule": {
        
        "type": "minecraft:sequence",
        "sequence": [
            {
                "type": "minecraft:condition",
                "if_true": {
                    "type": "minecraft:vertical_gradient",
                    "false_at_and_above": {
                        "above_bottom": 5
                    },
                    "random_name": "minecraft:bedrock_floor",
                    "true_at_and_below": {
                        "above_bottom": 0
                    }
                }, 
                "then_run": {
                    "type": "minecraft:block",
                    "result_state": {
                        "Name": "minecraft:bedrock"
                    }
                }
            },
            {
                "type": "minecraft:condition",
                "if_true": {
                    "type": "biome",
                    "biome_is": ["jy_overworld:plains"]
                }, 
                "then_run": {
                    "type": "minecraft:block",
                    "result_state": {
                        "Name": "minecraft:grass_block"
                    }
                }
            },
            {
                "type": "minecraft:condition",
                "if_true": {
                    "type": "biome",
                    "biome_is": ["jy_overworld:beach"]
                }, 
                "then_run": {
                    "type": "minecraft:block",
                    "result_state": {
                        "Name": "minecraft:sand"
                    }
                }
            },
            {
                "type": "minecraft:condition",
                "if_true": {
                    "type": "biome",
                    "biome_is": ["jy_overworld:ocean"]
                }, 
                "then_run": {
                    "type": "minecraft:block",
                    "result_state": {
                        "Name": "minecraft:gravel"
                    }
                }
            }
            // {
            //     "type": "condition",
            //     "if_true": {
            //         "type": "noise_threshold",
            //         "noise": "jy_overworld:global",
            //         "xz_scale": 0.25,
            //         "y_scale": 0,
            //         "min_threshold": -0.173,
            //         "max_threshold": -0.173
            //     },
            //     "then_run": {
            //         "type": "minecraft:block",
            //         "result_state": {
            //             "Name": "minecraft:sand"
            //         }
            //     }
            // }
        ]
    }
}