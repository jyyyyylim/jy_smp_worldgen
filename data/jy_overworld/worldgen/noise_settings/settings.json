{
    "sea_level": 63,
    "disable_mob_generation": false,
    "ore_veins_enabled": false,
    "aquifers_enabled": false,
    "legacy_random_source": false,
    "default_block": {
        "Name": "minecraft:stone"
    },
    "default_fluid": {
        "Name": "minecraft:water"
    },
    "spawn_target": [],
    "noise": {
        "height": 640,
        "min_y": -64,
        "max_y": 512,
        "size_horizontal": 4,
        "size_vertical": 1
    },
    "noise_router": {
        "barrier": 0,
        "fluid_level_floodedness": 0,
        "fluid_level_spread": 0,
        "lava": 0,
        "vein_toggle": 0,
        "vein_ridged": 0,
        "vein_gap": 0,
        "temperature": 0,
        "vegetation": 0,
        "continents": {                 
            "type": "noise",
            "noise": "jy_overworld:global",
            ///// MUST ALWAYS MIRROR GLOBAL XZ SCALE VALUES /////
            "xz_scale": 0.25, 
            "y_scale": 0
            ////////////////////////////////////////////////////
        },
        "erosion": 0,
        "depth": 0,
        "ridges": 0,
        "initial_density_without_jaggedness": 0,
        //test
        "final_density": {
            "type": "add",
            "argument1": {
                // const
                "type": "constant",
                "argument": 0
            },
            // ADDITION: MASTER CONTINENTALNESS FUNCTION
            "argument2": {
                "type": "add",
                    "argument1": {
                        // yclamp, biasing in a increasing gradient into 150 to prevent holes
                        //temporasry hard offset by -14 for the plateau to coincide with waterline
                        "type": "y_clamped_gradient",
                        "from_y": -14,
                        "to_y": 136,
                        "from_value": 1.0,
                        "to_value": -1.2
                    },
                    "argument2": {
                        // global noise
                        // not to be concerned with biome specific elevations and terrain shape, that should be done in post or from layering other noise
                        // this is only the master "state" from which to define fundamental land-seas
                        "type": "noise",
                        "noise": "jy_overworld:global",
                        "xz_scale": 0.25,
                        "y_scale": -0.2
                    }
            }
            // layer perlin to bias land clusters together?
            // }
        }
    },
    "surface_rule": {
        "type": "minecraft:sequence",
        "sequence": [
            {
                "type": "minecraft:condition",
                "if_true": {
                    "type": "minecraft:vertical_gradient",
                    "false_at_and_above": {
                        "above_bottom": 5
                    },
                    "random_name": "minecraft:bedrock_floor",
                    "true_at_and_below": {
                        "above_bottom": 0
                    }
                }, 
                "then_run": {
                    "type": "minecraft:block",
                    "result_state": {
                        "Name": "minecraft:bedrock"
                    }
                }
            }   
        ]
    }
}